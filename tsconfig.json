{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "target": "ES2020",
        "preserveConstEnums": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "types": ["vitest/globals", "node"]
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "exclude": ["**/*.spec.ts", "bin", "dist", "test", "vite.config.mts", "node_modules/**"]
}
